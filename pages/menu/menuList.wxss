/*模态化窗口 start*/

  
/*mask*/
.drawer_screen { 
 width: 100%; 
 height: 100%; 
 position: fixed; 
 top: 0; 
 left: 0; 
 z-index: 1000; 
 background: #000; 
 opacity: 0.5; 
 overflow: hidden; 
} 
  
/*content*/
.drawer_box { 
 width: 650rpx; 
 overflow: hidden; 
 position: fixed; 
 top: 5%; 
 left: 0; 
 z-index: 1001; 
 background: #FAFAFA; 
 margin:0 50rpx 0 50rpx; 
 border-radius: 3px; 
} 
  
.drawer_title{ 
 padding:15px; 
 font: 20px "microsoft yahei"; 
 text-align: center; 
} 
.drawer_content { 
 height: 360px; 
 overflow-y: scroll; /*超出父盒子高度可滚动*/
} 
  
.btn_ok{ 
  width: 250rpx;
 padding: 10px; 
 font: 18px "microsoft yahei"; 
 text-align: center; 
 border-top: 1px solid #E8E8EA; 
 color: #3CC51F; 
 margin-left: 5px;
 background-color: 	#E0FFFF;
 border-radius: 20rpx;

} 
.btn_cancel{ 
  width: 250rpx;
 padding: 10px; 
 font: 18px "microsoft yahei"; 
 text-align: center; 
 border-top: 1px solid #E8E8EA; 
 color: #CD2626; 
 margin-right: 5px;
 background-color: 	#FFE4E1;
 border-radius: 20rpx;
} 
  
